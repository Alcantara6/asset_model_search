@import "mixins.styl"
.popup
    fullScreen()
    .popup-shade
        shade()
    .popup-inner
        absCtr()
        left: 0
        top: 2.55rem
        width: 85.733%
        max-width: 6.43rem
        overflow: hidden
        background: #fff
        border: .06rem solid #e5e5e5
        border-radius: .2rem
        .popup-close
            width: .42rem
            height: .42rem
            position: absolute
            z-index: 2
            top: .16rem
            right: .16rem
            background: transparent url("data:image/png;base64,") no-repeat center
            background-size: 90%
        .popup-title
            height: .8rem
            line-height: .8rem
            text-align: center
            font-size: 32px
            font-weight: 400
        .popup-content
            max-height: 4rem
            min-height: 3rem
            overflow: auto
            .login-inner
                position: relative
                margin: .2rem .3rem
                color: #666
                .login-input
                    margin: .1rem 0
                    height: .9rem
                    border-bottom: 1px solid #a4a4a4
                    input
                        padding-top: .2rem
                        font-size: 26px
                .login-code
                    display: flex
                    align-items: center
                    input
                        flex: 2
                        font-size: 26px
                    button
                        flex: 1
                        height: .62rem
                        padding: 0 .05rem
                        font-size: 24px
                        color: #de4c39
                        border: 1px solid #de4c39
                        border-radius: .05rem
                        background #fff
            .parag-inner
                margin: .3rem .4rem
            .popup-mark
                margin: .2rem .3rem
                .login-agree
                    display: flex
                    align-items: center
                    i
                        display: block
                        margin-right: .1rem
                        width: .3rem
                        height: .3rem
                        background: url("data:image/png;base64,") no-repeat;
                        background-size: 100%
                    span
                        font-size: 24px
                    .agree-message
                        color: #de4c39
                .login-msg
                    color: #de4c39
                    min-height: .6rem
                    padding: .1rem 0
                    font-size: 20px
        .popup-button
                display: flex
                height: 1rem 
                button
                    flex: 1
                    color: #fff
                    font-size: 32px
                    text-align: center